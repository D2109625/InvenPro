<?php

namespace App\Controllers;

use App;

class AdminController
{
    public function dashboard(): void
    {
        // Fetch data for widgets
        $employeeModel = new App\Models\Employee();
        $totalUsers = $employeeModel->getTotalUsers();
        $activeUsers = $employeeModel->getActiveUsers();
        $newSignUps = $employeeModel->getNewSignUps();

        // Prepare data to pass to the view
        $viewData = [
            'totalUsers' => $totalUsers,
            'activeUsers' => $activeUsers,
            'newSignUps' => $newSignUps,
        ];

        // Render the admin dashboard view with the widget
        App\View::render('admin/dashboard', $viewData);
    }
}
